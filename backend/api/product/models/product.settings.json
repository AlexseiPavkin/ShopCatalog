{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "product"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "desc": {
      "type": "richtext"
    },
    "category": {
      "via": "products",
      "model": "category"
    },
    "price": {
      "type": "decimal",
      "default": 1
    },
    "author": {
      "type": "string"
    },
    "img": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    }
  }
}
